# ========================================
# SalonMoney Backend Environment Variables
# ========================================
# IMPORTANT: Copy this file to .env and configure with your actual values
# NEVER commit .env to version control!

# ========================================
# Database Configuration
# ========================================
# Use MongoDB Atlas for production
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your_db_user:your_secure_password@your-cluster.mongodb.net/salonmoneynew?retryWrites=true&w=majority
PORT=5000

# ========================================
# JWT Configuration
# ========================================
# Generate strong secrets using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_generated_jwt_secret_128_chars_minimum
JWT_EXPIRE=24h
REFRESH_TOKEN_SECRET=your_generated_refresh_secret_128_chars_minimum
REFRESH_TOKEN_EXPIRE=7d

# ========================================
# Binance API (Optional)
# ========================================
# For live exchange rates and crypto features
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true

# ========================================
# Financial Configuration
# ========================================
# Conversion Rates (1 USDT = X NSL)
NSL_TO_USDT_RECHARGE=23
USDT_TO_NSL_WITHDRAWAL=23

# Fee Settings
RECHARGE_FEE_PERCENTAGE=10
WITHDRAWAL_FEE_PERCENTAGE=10
MIN_WITHDRAWAL_AMOUNT_NSL=100

# Referral Settings
REFERRAL_BONUS_PERCENTAGE=35
MAX_REFERRAL_LEVEL=1

# ========================================
# Super Admin Credentials
# ========================================
# IMPORTANT: Change these immediately after first setup!
SUPER_ADMIN_USERNAME=admin
SUPER_ADMIN_EMAIL=admin@yourdomain.com
SUPER_ADMIN_PHONE=+1234567890
SUPER_ADMIN_PASSWORD=use_a_very_strong_password_here

# ========================================
# Email Configuration
# ========================================
# For password reset and 2FA emails
# Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=noreply@salonmoney.com

# ========================================
# Frontend URL
# ========================================
# Local: http://localhost:3000
# Production: https://your-domain.com
FRONTEND_URL=http://localhost:3000

# ========================================
# Twilio SMS (Optional)
# ========================================
# For SMS notifications
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# Environment
# ========================================
NODE_ENV=development
