# Database Configuration
# For production, use MongoDB Atlas or your cloud MongoDB provider
MONGODB_URI=mongodb://localhost:27017/salonmoney

# Server Configuration
PORT=5000

# JWT Configuration
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=24h
REFRESH_TOKEN_SECRET=your_refresh_secret_key_change_this
REFRESH_TOKEN_EXPIRE=7d

# Fee Configuration
RECHARGE_FEE_PERCENTAGE=10
WITHDRAWAL_FEE_PERCENTAGE=10
REFERRAL_BONUS_PERCENTAGE=35

# Currency Conversion (1 USDT = X NSL)
NSL_TO_USDT_RECHARGE=23
USDT_TO_NSL_WITHDRAWAL=23

# Withdrawal Settings
MIN_WITHDRAWAL_AMOUNT_NSL=100

# Referral Settings
MAX_REFERRAL_LEVEL=1

# Super Admin Credentials
# IMPORTANT: Change these in production!
SUPER_ADMIN_USERNAME=superadmin
SUPER_ADMIN_EMAIL=admin@salonmoney.com
SUPER_ADMIN_PHONE=+232777777777
SUPER_ADMIN_PASSWORD=change_this_password_immediately

# Email Configuration
# For Gmail, you need to generate an App Password
# Go to: https://myaccount.google.com/apppasswords
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@salonmoney.com

# Frontend URL
# In production, use your Vercel frontend URL
FRONTEND_URL=http://localhost:3000

# Binance API (Optional - for live exchange rates)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true

# Twilio SMS (Optional - for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Environment
NODE_ENV=development
